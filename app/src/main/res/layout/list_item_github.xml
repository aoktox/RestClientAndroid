<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="autoproxy"
        android:minHeight="40dp"
        android:gravity="center"
        android:id="@+id/txt_nama_repo"
        android:textColor="#1e9437" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://github.com/aoktox/autoproxy"
        android:minHeight="30dp"
        android:gravity="left|center"
        android:id="@+id/txt_url_repo"
        android:textColor="#2828c7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Otomatis mengatur proxy ketika terkoneksi ke jaringan EEPIS (PENS)"
        android:id="@+id/txt_desc_repo"
        android:layout_marginBottom="20dp"/>
</LinearLayout>